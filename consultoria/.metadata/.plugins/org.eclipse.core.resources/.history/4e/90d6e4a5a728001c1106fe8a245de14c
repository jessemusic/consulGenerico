package br.com.mattec.consul.reporitory;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import br.com.mattec.consul.entities.Categoria;

@Repository
public interface CategoriaRepository extends JpaRepository<Categoria, Long> {

	@Query("SELECT br.com.mattec.consul.entities.Categoria FROM Categoria c"
			+ "  WHERE c.nome_da_categoria = :nome ")
	Optional<Categoria> findNomeCategoriaById(String nome);
}
