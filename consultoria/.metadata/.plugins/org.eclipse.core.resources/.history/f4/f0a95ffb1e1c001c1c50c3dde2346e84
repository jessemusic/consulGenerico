package br.com.mattec.consul.reporitory;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import br.com.mattec.consul.dto.CadastraDto;
import br.com.mattec.consul.entities.Client;

@Repository
public interface ClientRepository extends JpaRepository<Client, Long> {
	
	@Query(value="SELECT new CadastraDto(c.nome, c.cpf, c.numeroEndereco, "
			+ "e.cep, e.logradouro, e.complemento, e.bairro, "
			+ "e.localidade, e.uf) FROM Client c "
			+ "INNER JOIN enderecos e ON c.enderecos.id = e.id ", nativeQuery = true)
//	@Query(value="SELECT  FROM Client c INNER JOIN enderecos ON c.endereco_id = enderecos.id ", nativeQuery = true)
	List<CadastraDto> findAllCadastro();
}
