package br.com.mattec.consul.controller;

import java.util.List;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import br.com.mattec.consul.dto.PedidoCadastraDto;
import br.com.mattec.consul.dto.PedidoDto;
import br.com.mattec.consul.entities.PedidoEntity;
import br.com.mattec.consul.service.PedidoService;

@RestController
@RequestMapping(value = "/produtos")
public class PedidoController {

	@Autowired
	private PedidoService service;


	@GetMapping("/listPedidos")
	public ResponseEntity<Object> findAllAndCategoria() {
		return ResponseEntity.ok().body(this.service.findAllAndCategoria());

	}
	
	@GetMapping("/findPedidoByAll")
	public ResponseEntity<List<PedidoEntity>> findById() {
		return ResponseEntity.ok().body(this.service.findAll());

	}
	
	@PostMapping("/insert")
	public ResponseEntity<Void> insert(@Valid @RequestBody PedidoCadastraDto obj) {
		this.service.insert(obj);
		return ResponseEntity.ok().build();

	}
	

	@GetMapping("/findCodigoDeBarra")
	public ResponseEntity<List<PedidoEntity>> findAllByOrderByCodigoDeBarraDesc() {
		return ResponseEntity.ok().body(this.service.findCodigoDeBarra());

	}

}
