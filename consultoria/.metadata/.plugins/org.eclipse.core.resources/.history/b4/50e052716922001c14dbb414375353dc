package br.com.mattec.consul.controller.exceptions;

import java.util.ArrayList;
import java.util.List;

import lombok.AllArgsConstructor;
@AllArgsConstructor(String message)
public class ValidationError extends StandardError {
	private static final long serialVersionUID = 1L;
	private List<FieldMessageCustom> list = new ArrayList<>();
	
	public List<FieldMessageCustom> getList() {
		return list;
	}
	public void addError(String fieldName, String message) {
		list.add(new FieldMessageCustom(fieldName, message));
	}

}
